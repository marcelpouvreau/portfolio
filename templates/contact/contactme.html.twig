{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="contact-container">
    <div clas="">
        <h1>Contact me</h1>
            {{ form_start(contactForm, {'attr': {'class': 'container-contact-form'}}) }}
                {{ form_row(contactForm.email, {'attr': {'class': 'contact-input'}}) }}
                {{ form_row(contactForm.content, {'attr': {'class': 'contact-input contact-content'}}) }}
                {{ form_row(contactForm.send, {'attr': {'class': 'send-btn'}}) }}
            {{ form_end(contactForm) }}
    </div>
</div>
{% endblock %}
